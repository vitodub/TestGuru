<h1>Проходим тест <%= @test_passage.test.title %></h1>

<b>Вопрос № <%= @test_passage.test.questions.count - @test_passage.test.questions.where('id > ?', @test_passage.current_question.id).count %>.</b>

<b>Всего вопросов <%= @test_passage.test.questions.count %></b>

<h2>
  <%= @test_passage.current_question.body %>
</h2>

<%= form_with url: test_passage_path(@test_passage), local: true, method: :put do |form| %>
  <%= form.collection_check_boxes :answer_ids, @test_passage.current_question.answers, :id, :body, include_hidden: false do |b| %>
    <p>
      <%= b.check_box id: "answer_ids_#{b.object.id}" %>
      <%= b.label %>
    </p>
  <% end %>

  <p><%= form.submit 'Следующий вопрос' %></p>
<% end %>
