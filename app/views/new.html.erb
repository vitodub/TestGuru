<h1>Создать вопрос для теста <%= @test.title %></h1>

<form action="/test/<%= params[:test_id] %>/questions/" method="post">
  <input type="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

  <p>
    <label for="question-body">Текст вопроса:</label>
    <input type="text" name="question[body]" id="question-body">
  </p><br>

  <input type="submit" value="Создать">
</form>
