<div class="container">
  <h1>FeedbackfForm</h1>
  <%= form_for @feedback do |f| %>
    <div class="col-md-6">
      <%= f.hidden_field :name, value: current_user.first_name %>

      <%= f.hidden_field :email, value: current_user.email %>

      <%= f.label :message %></br>
      <%= f.text_area :message, rows: 8, cols: 40, required: true,
      placeholder: "Send us a feedback"%></br>

      <%= f.submit 'Send Message', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
